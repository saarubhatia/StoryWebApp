<%-include('../partials/header') %>
<div class="container">
    <h1 style="text-align: center;">Publish a new Story</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/stories" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="title" placeholder="Name" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image Url">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="storyBody" placeholder="Paste your story here!" rows="10"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-outline-dark btn-block">Submit</button>
            </div>
        </form>
        <a style="color:black" href="/stories">Go Back</a>
    </div>
</div>
<%-include('../partials/footer') %>