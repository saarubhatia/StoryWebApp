<%-include('../partials/header') %>
<div class="container">
        <h1 style="text-align: center;">Edit <%=story.title%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/stories/<%= story._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="story[title]" value="<%=story.title%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="story[image]" value="<%=story.image%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="story[storyBody]" placeholder="Paste your story here!" rows="10"><%=story.storyBody%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-dark btn-block">Update</button>
                </div>
            </form>
            <a style="color:black" href="/stories">Go Back</a>
        </div>
</div>
<%-include('../partials/footer') %>